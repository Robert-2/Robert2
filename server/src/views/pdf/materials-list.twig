{% extends "pdf/base.twig" %}

{% block title %}{{ translate("materialsList") }}{% endblock %}

{% block style %}
.listing-title {
    page-break-after: avoid;
}

.listing-table {
    margin-bottom: 8mm;
}

.listing-table > thead > tr {
    page-break-after: avoid;
}

.listing-table > thead > tr > th,
.listing-table > tbody > tr > td {
    vertical-align: middle;
}

.listing-table > tbody > tr > td {
    height: 6mm;
    font-size: 8pt;
}
{% endblock %}

{% block content %}
<table class="layout-table">
    <tr>
        <td class="third">
            {{ include('blocks/company-address.twig', { company: company }) }}
        </td>
        <td class="two-third">
            <h1 class="box center">{{ translate('materialsList') }}</h1>
            <h3 class="center">
                {{ translate('asOfDate', date|format_date('long', locale=locale)) }}
                {% if parkOnlyName is not null %}
                    {{ translate('forPark') }}
                {% else %}
                    ({{ translate('allParks') }})
                {% endif %}
            </h3>
            {% if parkOnlyName is not null %}
                <h2 class="center">{{ parkOnlyName }}</h2>
            {% endif %}
        </td>
    </tr>
</table>

{% for park in parksMaterialsList %}
    {% if parkOnlyName is null %}
        <h3 class="listing-title">
            {% if park['name'] is not empty %}
                {{ park['name'] }}
            {% else %}
                ({{ translate('unknownPark') }})
            {% endif %}
        </h3>
    {% endif %}
    <table class="listing-table">
        <thead>
            <tr>
                <th style="width: 30mm;">{{ translate('reference') }}</th>
                <th>{{ translate('designation') }}</th>
                <th style="width: 20mm;">{{ translate('replacementValue') }}</th>
                <th style="width: 16mm;">{{ translate('stockQuantity') }}</th>
                <th style="width: 25mm;">{{ translate('recountQuantity') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for subCategory in park['materials'] %}
                <tr>
                    <td class="section-title" colspan="5">
                        {% if subCategory['name'] == '---' %}
                        {{ translate('otherMaterials') }}
                        {% else %}
                        {{ subCategory['name'] }}
                        {% endif %}
                    </td>
                </tr>
                {% for material in subCategory['materials'] %}
                    {{ include('blocks/materials/line-inventory.twig', { material: material }) }}
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>
{% endfor %}

<h3 class="listing-title">{{ translate('notes') }}</h3>
<div class="inset" style="height: 100mm;"></div>
{% endblock %}
